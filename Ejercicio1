#include <stdio.h>
#include<iostream>
int main()
{
    int edad;
    std::cout <<"Porfavor ingrese la edad de la persona: ";
    std::cin>>edad;
    if (edad>=18){
        std::cout<<"Usted es mayor de edad.  "<<std::endl;
    }else{
    
        std::cout<<"Usted es menor de edad. "<<std::endl;
    }
    return 0;
}
    
    
